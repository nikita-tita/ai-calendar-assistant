# ====================================
# AI Calendar Assistant - Environment Variables
# ====================================

# Application Settings
APP_ENV=production
DEBUG=False
LOG_LEVEL=INFO

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Yandex GPT API (Primary LLM)
YANDEX_GPT_API_KEY=your_yandex_gpt_api_key_here
YANDEX_GPT_FOLDER_ID=your_yandex_folder_id_here

# Radicale CalDAV Server
RADICALE_URL=http://radicale:5232
RADICALE_USERNAME=admin
RADICALE_PASSWORD=your_secure_radicale_password_here

# Google Calendar OAuth2 (Optional - если используете Google Calendar)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# Database Configuration (для Property Bot)
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://property_user:your_db_password@property-bot-db:5432/property_bot

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_for_encryption_here
JWT_SECRET=your_jwt_secret_key_here

# Encryption for user data (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Option 1: Set key directly in environment (recommended for production)
ENCRYPTION_KEY=
# Option 2: Set path to key file (must be in different directory than data)
ENCRYPTION_KEY_FILE=/etc/calendar-bot/.encryption_key
# Data directory (encrypted files stored here, separate from key)
ENCRYPTION_DATA_DIR=/var/lib/calendar-bot

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Timezone
DEFAULT_TIMEZONE=Europe/Moscow

# Redis (for rate limiter persistence and caching)
# Use redis://redis:6379/0 in Docker, or redis://localhost:6379/0 locally
# Falls back to memory:// if not set (not recommended for production)
REDIS_URL=redis://redis:6379/0

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE_PATH=/app/logs/app.log

# Rate Limiting
MAX_REQUESTS_PER_USER_PER_DAY=20
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_USER=20
RATE_LIMIT_WINDOW_SECONDS=86400

# Feature Flags
ENABLE_VOICE_COMMANDS=True
ENABLE_OCR=False
ENABLE_RECURRING_EVENTS=True
ENABLE_REMINDERS=True

# Deployment (for CI/CD)
DEPLOY_SERVER=your_server_ip_or_domain
DEPLOY_USER=root
SSH_PORT=22

# Docker Registry (GitLab)
CI_REGISTRY=registry.gitlab.com
CI_REGISTRY_USER=your_gitlab_username
CI_REGISTRY_PASSWORD=your_gitlab_token_or_password

# Backup Settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/var/lib/calendar-bot/backups

# Cloud Backup (S3-compatible - Yandex Object Storage, AWS S3, MinIO)
# Generate credentials at: https://console.cloud.yandex.ru/
S3_ENDPOINT=https://storage.yandexcloud.net
S3_BUCKET=calendar-bot-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
