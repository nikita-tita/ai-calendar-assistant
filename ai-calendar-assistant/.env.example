# ====================================
# AI Calendar Assistant - Environment Variables
# ====================================
#
# üîê SECURITY INSTRUCTIONS:
#
# 1. Generate secure secrets using Python:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. NEVER commit .env file to git (check .gitignore)
#
# 3. Use different secrets for dev/staging/production
#
# 4. Minimum SECRET_KEY length: 32 characters
#
# ====================================

# Application Settings
APP_ENV=production
DEBUG=False  # ‚ö†Ô∏è NEVER set to True in production!
LOG_LEVEL=INFO

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_WEBAPP_URL=https://your-domain.com  # WebApp URL for menu button (no trailing slash)

# Yandex GPT API (Primary LLM)
YANDEX_GPT_API_KEY=your_yandex_gpt_api_key_here
YANDEX_GPT_FOLDER_ID=your_yandex_folder_id_here

# Radicale CalDAV Server
RADICALE_URL=http://radicale:5232
RADICALE_ADMIN_USER=admin
RADICALE_ADMIN_PASSWORD=CHANGE_ME_use_secrets_token_urlsafe_24
RADICALE_BOT_USER=calendar_bot
RADICALE_BOT_PASSWORD=CHANGE_ME_use_secrets_token_urlsafe_24  # ‚ö†Ô∏è REQUIRED! No default

# Google Calendar OAuth2 (Optional - –µ—Å–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ Google Calendar)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# Database Configuration (–¥–ª—è Property Bot)
DB_PASSWORD=CHANGE_ME_use_secrets_token_urlsafe_24
DATABASE_URL=postgresql://property_user:your_db_password@property-bot-db:5432/property_bot

# Security (CRITICAL - Must be set!)
SECRET_KEY=CHANGE_ME_use_secrets_token_urlsafe_32  # ‚ö†Ô∏è REQUIRED! Min 32 chars
JWT_SECRET=CHANGE_ME_use_secrets_token_urlsafe_32
ENCRYPTION_KEY=CHANGE_ME_use_secrets_token_urlsafe_32
CORS_ORIGINS=https://your-domain.com,https://webapp.telegram.org  # Comma-separated list

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Timezone
DEFAULT_TIMEZONE=Europe/Moscow

# Redis (for rate limiter persistence and caching)
# Use redis://redis:6379/0 in Docker, or redis://localhost:6379/0 locally
# Falls back to memory:// if not set (not recommended for production)
REDIS_URL=redis://redis:6379/0

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE_PATH=/app/logs/app.log

# Rate Limiting
MAX_REQUESTS_PER_USER_PER_DAY=20
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_USER=20
RATE_LIMIT_WINDOW_SECONDS=86400

# Feature Flags
ENABLE_VOICE_COMMANDS=True
ENABLE_OCR=False
ENABLE_RECURRING_EVENTS=True
ENABLE_REMINDERS=True

# Deployment (for CI/CD)
DEPLOY_SERVER=your_server_ip_or_domain
DEPLOY_USER=root
SSH_PORT=22

# Docker Registry (GitLab)
CI_REGISTRY=registry.gitlab.com
CI_REGISTRY_USER=your_gitlab_username
CI_REGISTRY_PASSWORD=your_gitlab_token_or_password

# Backup Settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
