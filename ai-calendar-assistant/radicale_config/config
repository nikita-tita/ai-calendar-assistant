# Radicale Configuration
# https://radicale.org/v3.html#configuration

[server]
# Bind to all interfaces in Docker
hosts = 0.0.0.0:5232
max_connections = 20
max_content_length = 100000000
timeout = 30

[encoding]
request = utf-8
stock = utf-8

[auth]
# Allow anonymous access or use htpasswd
type = none
# Если нужна аутентификация:
# type = htpasswd
# htpasswd_filename = /config/users
# htpasswd_encryption = bcrypt

[rights]
# Full access for all users (use 'owner_only' in production)
type = from_file
file = /config/rights

[storage]
# Store calendar data in /data volume
type = multifilesystem
filesystem_folder = /data/collections

[web]
# Disable web interface (only CalDAV/CardDAV access)
type = none

[logging]
level = info
mask_passwords = True
