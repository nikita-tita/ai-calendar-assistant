# ============================================
# AI Calendar Assistant - Environment Variables
# ============================================

# Copy this file to .env and fill in your values

# ============================================
# SECURITY (REQUIRED for production)
# ============================================

# Secret key for encryption and sessions
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-min-32-characters

# ============================================
# TELEGRAM BOT (REQUIRED)
# ============================================

# Get from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Webhook secret for additional security
TELEGRAM_WEBHOOK_SECRET=optional_webhook_secret
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram/webhook

# ============================================
# YANDEX GPT (REQUIRED for AI features)
# ============================================

# Get from https://console.cloud.yandex.ru/
YANDEX_GPT_API_KEY=your_yandex_gpt_api_key
YANDEX_GPT_FOLDER_ID=your_folder_id

# ============================================
# RADICALE CALDAV SERVER (Optional)
# ============================================

# URL for Radicale calendar server
RADICALE_URL=http://radicale:5232

# Bot service account for accessing calendars
RADICALE_BOT_USER=bot
RADICALE_BOT_PASSWORD=your_bot_password

# Admin credentials (optional)
RADICALE_ADMIN_USER=admin
RADICALE_ADMIN_PASSWORD=admin_password

# ============================================
# DATABASE (Optional - default is SQLite)
# ============================================

# SQLite (default, no setup required)
DATABASE_URL=sqlite:///./calendar_assistant.db

# OR PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/calendar_assistant

# ============================================
# REDIS (Optional - for rate limiting)
# ============================================

REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=optional_redis_password

# ============================================
# GOOGLE CALENDAR OAUTH (Optional)
# ============================================

# For Google Calendar sync
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_REDIRECT_URI=https://yourdomain.com/sync/oauth/google/callback

# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment: development or production
APP_ENV=development

# Debug mode (True for development, False for production)
DEBUG=True

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Host and port for FastAPI
HOST=0.0.0.0
PORT=8000

# Default timezone
DEFAULT_TIMEZONE=Europe/Moscow

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.ru,https://webapp.telegram.org

# Rate limiting
MAX_REQUESTS_PER_USER_PER_DAY=20
MAX_CONCURRENT_REQUESTS=100
